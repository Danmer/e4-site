font-url(file)
  return url('fonts/' + file)

webfont(family, file)
  @font-face
    font-family family
    src font-url(file + '.eot')
    src font-url(file + '.eot?#iefix') format('embedded-opentype'), font-url(file + '.woff') format('woff'), font-url(file + '.ttf') format('truetype'), font-url(file + '.svg#'+ family) format('svg')
    font-weight normal
    font-style normal

webfont("Spaceranger", "spaceranger")

*
	box-sizing border-box

html
	width 100%
	height 100%
	background #000 url('../images/background.jpg') center bottom no-repeat fixed
	background-size auto 100%
	color #FFF

body
	width 100%
	height 100%
	margin 0
	padding 0
	font 14px sans-serif

h2
	margin 0
	padding 0.5em
	color #FFF
	font 2em Spaceranger, sans-serif

a
	color #986
	&:hover
		color #DCA

.main
	position fixed
	left 0
	bottom 0
	width 100%
	background-color rgba(0, 0, 0, 0.8)
	text-align center

.nav
	text-align center

	ul
		display inline-block
		margin 0
		padding 1.5em 0
		list-style none

	li
		display inline-block
		margin 0 30px

	a
		font-family Spaceranger, sans-serif
		font-size 1.7em
		color #FC0
		text-decoration none
		border-bottom 1px dashed
		text-shadow 0 1px 1px #000

	&:hover, &:active, &:focus, &.active
		color #FFF
		outline none

.content
	display none
	width 100%

/********************************/

.members

	ul
		margin 0
		padding 0
		list-style none

	li
		display inline-block
		margin 0 1em 1em

	img
		border 1px solid #333

	.nick
		margin 0.2em 0
		color #FC0
		font-weight bold
		font-size 16px

	.name
		color #999

	.city, .birth
		color #666

	.role
		color #666

/********************************/

.matches
	position relative
	display inline-block
	margin 0 auto 1em
	white-space nowrap

	hr
		border-color #999

	strong
		color #FC0
		font-size 1.2em

	ul
		display inline-block
		margin 0.5em
		padding 0
		max-width 1000px
		list-style none
		vertical-align middle
		overflow hidden

	.matches-prev
	.matches-next
		display inline-block
		vertical-align middle
		font-size 30px
		line-height 55px
		cursor pointer
		&:hover
			color #FC0
		&.disabled
			opacity 0.3



.match
	position relative
	display inline-block
	margin 1px 0.5em
	padding 0.3em
	vertical-align top
	border 1px solid #333
	background-color rgba(50, 50, 50, 0.5)
	text-align left

	&.official
		background-color rgba(50, 30, 0, 0.5)
		border 1px solid #630

	p
		margin 0.3em 0

	.teams
		white-space nowrap
		color #999

	.team
		padding 0 0.2em
		font-weight bold
		color #FFF

	.date
		position absolute
		top 1.8em
		right 0.5em
		color #666

	.result
		&.victory
		&.win
			color #090
		&.draw
			color #990
		&.lost
			color #900

	.result-link
		margin-left 0.1em
		border-bottom 1px dashed #333
		cursor pointer

	.details
		margin-left 0.1em
		display none
		white-space normal

	.link
		color #986
		cursor pointer

	.link:hover
		color #DCA

/********************************/

.about
	display inline-block
	text-align left

	.contacts
		line-height 1.5em

	.history
		margin 0 1em
		color #CCC
		text-align center

	.tropheis-list
		display inline-block
		margin 1em
		vertical-align top

	strong
		display block
		color #FC0
		font-size 1.2em
		text-align center

	ul
		margin 0
		padding 0

	li
		margin 0.2em 0

/********************************/

.copyright
	position fixed
	right 1em
	bottom 1em
	color #222
	font-size 14px

	a
		color #222
		text-decoration none
		transition color 0.3s

		&:hover
			color #333
